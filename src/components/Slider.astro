---
import Card from "./Card.astro";


---

<div class="slider" style=" --width: 100%/4; --height: 800px; --quantity: 10;">
    <div class="list">
        <div class="item" style="--position: 1"><Card /></div>
            <div class="item" style="--position: 2"><Card /></div>
            <div class="item" style="--position: 3"><Card /></div>
            <div class="item" style="--position: 4"><Card /></div>
            <div class="item" style="--position: 5"><Card /></div>
            <div class="item" style="--position: 6"><Card /></div>
            <div class="item" style="--position: 7"><Card /></div>
            <div class="item" style="--position: 8"><Card /></div>
            <div class="item" style="--position: 9"><Card /></div>
            <div class="item" style="--position: 10"><Card /></div>
        </div>
    </div>
</div>

<style>
.slider {
    width: 100%;
    height: var(--height);
    overflow: hidden;
    mask-image: linear-gradient(
        to right,
        transparent,
        #000 10% 90%,
        transparent
    );
}
.slider .list{
    display: flex;
    /* gap: 20px; */
    width: 100%;
    min-width: calc(var(--width) * var(--quantity));
    position: relative;
}
.slider .list .item{
	width: var(--width);
    height: var(--height);
    position: absolute;
    gap: 20px;
    /* margin-right: 20px; */
    left: 100%;
    animation: autoRun 90s linear infinite;
    transition: filter 50s;
    animation-delay: calc( (90s / var(--quantity)) * (var(--position) - 1) - 90s)!important;
}
/* .slider .list .item .itemBox{
    width: 100%;
} */
@keyframes autoRun{
    from{
        left: 100%;
    }to{
        left: calc(var(--width) * -1);
    }
}
.slider:hover .item{
    animation-play-state: paused!important;
    filter: grayscale(1);
}
.slider .item:hover{
    filter: grayscale(0);
}
</style>